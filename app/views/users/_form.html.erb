<%= form_with(model: user, local: true, html: { autocomplete: "off" }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Felhasználó %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :Jelszó %>
    <%= form.password_field :encrypted_password %>
  </div>

  <div class="field">
    <%= form.label "E-mail" %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label "Admin?" %>
    
    <%= form.check_box(:admin, { :class => 'ui select' }) %>
    
  </div>

  <div class="field">
    <%= form.label "E-mail" %>
    <%= form.file_field :avatar %>
  </div>
  
  
  
  
  
  


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
